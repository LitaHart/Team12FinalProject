<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.team12.main.team1.join.Team1joinMapper">

 <insert id="join">

insert into final_member values(#{member_ID},#{member_PW},1,#{member_name},#{member_birth},#{member_sex},#{member_phoneNum},#{member_address},#{member_email},CURRENT_DATE,'동의')

</insert>

<select id="getMemberByID" resultType="com.team12.main.team1.join.Member">

select * from final_member where member_ID =#{member_ID}

</select>


<update id="update" parameterType="com.team12.main.team1.join.Member">
		update final_member
		set member_PW=#{member_PW},member_name=#{member_name},member_phoneNum=#{member_phoneNum},member_address=#{member_address},member_email=#{member_email}
		where member_ID=#{member_ID}
	</update>




<delete id="bye" parameterType="com.team12.main.team1.join.Member">
		delete from final_member where member_ID = #{member_ID}	
	</delete>

<select id="getMemberNum" 	parameterType="com.team12.main.team1.join.Member"	resultType="java.lang.Integer">
		select count(*) from final_member where member_ID = #{member_ID}
	</select>

<select id="findKakao" parameterType="java.util.HashMap" resultType="com.team12.main.team1.join.Member">
		select * from final_member where member_name=#{member_name} and member_email=#{member_email}
	</select>

<insert id="kakaoInsert" parameterType="java.util.HashMap">
		insert into final_member(member_name, member_email)
			values(#{member_name}, #{member_email})
	</insert>

</mapper>
